<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %> 
    <body>
        
        <%- include('../partials/header') %> 
        <hr>
        <main>

            <!--Armado Login Box-->
            <section class="login-section">
               <div class="loginBox">
                   <img class="avatar-login-img" src="../img/imgs/logo-sin-fondo-1-beige.png"/>
                      <h1 class="login-h1">Logueate aquí</h1>

                      <form action="/processLogin" method="post">
                          <!--Nombre Usuario-->
                          <label for="nombreUsuario">Ingresá tu nombre de Usuario</label>
                          <input type="text" placeholder="Enter Username" name="username">
      
                          <!--Password-->
                          <label for="password">Ingresá tu contraseña</label>
                          <input type="password" placeholder="Enter Password" name="password">
                          
                          <div class="rememberme-login">
                            <input type="checkbox" name="rememberme" id="rememberme"><p>Recordame</p>
                          </div>
                          
   
                           <!-- PASAR EL INPUT SUBMIT A UN BUTTON SUBMIT -->
                           
                           <input type="submit" value="Log in"> 
                           
                           <!-- PASAR EL INPUT SUBMIT A UN BUTTON SUBMIT -->
                           
                          <a class="login-a" href="#">¿Perdiste tu password?</a>
                          <br>
                          <a class="login-a" href="#">¿No tenés cuenta?</a>
      
                      </label>
                      </form>
               </div>
            </section>
        </main>
        <%- include('../partials/footer') %> 
        
    </body>
</html>